<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="130"
        x:Class="MotionDrive.Desktop.SplashWindow"
        Title="SplashWindow"
		SystemDecorations="None"
		Height="130"
		Width="600"
		Topmost="False"
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		WindowStartupLocation="CenterScreen"
		CornerRadius="5">
	<StackPanel>
		<Image Source="avares://MotionDrive.Desktop/Assets/MotionDriveLargeLogo.png"></Image>
		<ProgressBar ShowProgressText="True" ProgressTextFormat="{Binding StatusText}" Foreground="#750E21" Height="20" Value="{Binding ProgressValue}"></ProgressBar>
	</StackPanel>
</Window>
