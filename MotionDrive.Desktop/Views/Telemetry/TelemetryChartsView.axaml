					<TextBlock Text="Gear" Foreground="Gray" FontSize="10" HorizontalAlignment="Left"/>
					<!--<Border CornerRadius="5" Height="150">
						<lvc:CartesianChart
							Series="{Binding SteeringSeries}"
							ZoomMode="X"
							YAxes="{Binding SteeringYAxis}"
